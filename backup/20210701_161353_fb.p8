function _init()
	create_player()
	create_pnj()
	create_note()
	--
	create_lasers()
	create_explosions()
end

function _update()
	player_movement()
	pnj_movement()
	-- on tire et la note se deplace
	tir_note()
	note_movement()
	-- on tire et les(s) laser(s) se deplace(nt)
	tir_laser()
	laser_movement()
end

function _draw()
	cls()
	draw_map()
	draw_player()
	draw_pnj()
	draw_note()
	draw_laser()
	draw_explosion()
end
