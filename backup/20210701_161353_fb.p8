function create_lasers()
    lasers={}
end

function create_explosions()
    explosions={}
end

function create_laser(x,y,sprite,sens,speed,flipx)  
  laser=
  {x=x,
  	y=y,
  	sprite=sprite,
  	sens=sens,
  	speed=speed,
  	flipx=flipx}
  return laser
end

function create_explosion(x,y,sprite,duration)
		explosion=
  {x=x,
  	y=y,
  	sprite=sprite,
  	duration=duration}
  return explosion
end

function draw_laser()
    if (count(lasers) > 0) then
        spr(lasers[1].sprite,lasers[1].x,lasers[1].y,1,1,lasers[1].flipx)
    end
end

function tir_laser()
    if (btnp(⬇️)) then 
        add(lasers, create_laser(pnj.x,pnj.y,4,pnj.sens,2,false))
    end
end

function laser_movement()
				if lasers[1] != nil then
	    newx=lasers[1].x+(lasers[1].sens*lasers[1].speed)
	    newy=lasers[1].y
	    --
	    testx=flr(newx/8)+1
	    testy=flr(newy/8)
	    --
	    if not check_flag(0,testx,testy) and newx>0 and newx<120 then
	     lasers[1].x=mid(0,newx,120)
	    else
	    	add(explosions,create_explosion(lasers[1].x,lasers[1].y,10,20))
	    	deli(lasers,1)
	    end
	  end
end

function draw_explosion()
    if (count(explosions) > 0) then
        spr(explosions[1].sprite,explosions[1].x,explosions[1].y)
    				explosions[1].duration-=1
    				--
    				if (explosions[1].duration <0) then
   						deli(explosions,1)
   					end
    end
end

