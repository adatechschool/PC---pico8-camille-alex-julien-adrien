pico-8 cartridge // http://www.pico-8.com
version 32
__lua__
--variables globales
btn_speed=1
spr_width=7
spr_height=7


function _init()
	x=60
	y=30
end

function _update()
	new_x=x
	new_y=y

	if(btn(➡️)) new_x=x+1
	if(btn(⬅️)) new_x=x-1
	if(btn(⬆️)) new_y=y-1
	if(btn(⬇️)) new_y=y+1
	
	if(new_x>127-spr_width) then
		x=127-spr_width
		print("test x ")
		else x=new_x
	end
	if(new_x<0) then
		x=0
		else x=new_x
	end
	if(new_y>127-spr_height) then
		y=127-spr_height
		else y=new_y
	end
	if(new_y<0) then
		y=0
		else y=new_y
	end
end

function _draw()
 cls()
	map(0,0,0,0)
	spr(1,x,y)

end
